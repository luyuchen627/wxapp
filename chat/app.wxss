@import '/assert/style/weui.wxss';
page{
	--theme-color: #3366ba;
}
page{
	background-color: #ebebeb;
	font-size: 16px;
}
.page__hd {
	padding: 40px;
}
.page__bd {
	padding-bottom: 40px;
}
.page__bd_spacing {
	padding-left: 15px;
	padding-right: 15px;
}
.page__ft{
	padding-bottom: 10px;
	text-align: center;
}
.page__title {
	text-align: left;
	font-size: 20px;
	font-weight: 400;
}
.page__desc {
	margin-top: 5px;
	color: #888888;
	text-align: left;
	font-size: 14px;
}
.sticky-con{
	height: 100vh;
	box-sizing: border-box;
}
/* 覆盖button[type=primary]默认样式 */
button[type=primary]{
	background-color: #3366ba;
	background-color: var(--theme-color);
}
/* 禁止底层滚动 */
.nocaroll{
	height: 100vh;
	overflow-y: hidden;
}
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	padding: 200rpx 0;
	box-sizing: border-box;
}
.weui-cell_noborder{
	border: none;
}
.weui-cell_noborder::before{
	content: initial;
}
.weui-cell_noborder::after{
	content: initial;
}
.weui-cell_picker{
	text-align: right;
	color: #999;
}
.weui-text_right{
	text-align: right;
	font-size:14px;
}
.we-fixed_bottom{
	position: fixed;
	bottom: 0;
	width: 100%;
	box-sizing: border-box;
	z-index: 999;
	background-color: #fff;
}
.user-avatar_wrap{
	position: relative;
	margin-right: 10px;
}
.user-avatar{
	display: inline-block;
	width: 50px;
	height: 50px;
}
.user-msg,.user-brief{
	width: 100%;
	font-size: 13px;
	color: #888888;
	white-space: nowrap;
	word-break: break-all;
	text-overflow: ellipsis;
	overflow: hidden;
}
.badge-top-right{
	position: absolute;
	top: -4px;
	right: -4px;
}
.weui-badge_filldot{
	width: 10px;
	height: 10px;
	padding: 0;
}
